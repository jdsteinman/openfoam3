FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cell;

setFormat       raw;

writeControl    writeTime; // this ensures that it's writing only at writeInterval

sets
(

    // make sure to change (x1 y1 z1) and (x2 y2 z2) to
    // the coordinates of the start and end points

    inlet 
    {
        type    lineCell;
        axis    xyz;
        start   (-1.0 1e-5 0.0);
        end     (1.0 1e-5 0.0);
    }

    stepFace 
    {
        type    lineCell;
        axis    xyz;
        start   (0.6 -1.0 0.0);
        end     (0.6 0.2 0.0);
    }
    
    stepHorizontal 
    {
        type    lineCell;
        axis    xyz;
        start   (0.6 0.20001 0.0);
        end     (3.1 0.20001 0.0);
    }
    
    topWall 
    {
        type    lineCell;
        axis    xyz;
        start   (-1.0 0.9999 0.0);
        end     (4.0 0.9999 0.0);
    }
);

fields          ( p U );


